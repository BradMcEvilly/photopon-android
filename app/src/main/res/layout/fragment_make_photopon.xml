<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <co.photopon.views.AutoFitTextureView
    android:id="@+id/camera"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true" />

  <ImageView
    style="@style/ImageView.Logo.White"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_margin="16dp" />

  <android.support.design.widget.FloatingActionButton
    android:id="@+id/fab_take_photo"
    android:layout_width="56dp"
    android:layout_height="56dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="24dp"
    app:backgroundTint="@color/pink" />

  <co.photopon.views.InfiniteViewPager
    android:id="@+id/view_pager"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_above="@id/fab_take_photo"
    android:layout_margin="10dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/bg_transparent_rounded"
    android:padding="10dp"
    android:visibility="gone" />

  <TextView
    android:id="@+id/tv_education_tip"
    android:layout_width="250dp"
    android:layout_height="100dp"
    android:layout_above="@id/fab_take_photo"
    android:layout_centerHorizontal="true"
    android:background="@drawable/bg_make_photopon_tip"
    android:fontFamily="@font/montserratalternates_regular"
    android:gravity="center"
    android:paddingBottom="32dp"
    android:paddingEnd="4dp"
    android:paddingStart="4dp"
    android:paddingTop="16dp"
    android:text="@string/make_photopon_education"
    android:textColor="@android:color/white"
    android:textSize="12sp"
    android:visibility="gone" />

</RelativeLayout>
