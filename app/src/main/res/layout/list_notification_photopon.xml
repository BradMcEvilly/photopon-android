<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="4dp"
  android:background="@drawable/bg_white_rounded"
  android:padding="0dp">

  <ImageView
    android:id="@+id/iv_person_photopon"
    style="@style/ImageView.ListIcon.Avatar"
    app:layout_constraintBottom_toTopOf="@+id/iv_coupon"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/tv_person_title"
    style="@style/TextView.ListText.FullName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="@id/iv_person_photopon"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@id/iv_person_photopon"
    app:layout_constraintTop_toTopOf="@id/iv_person_photopon" />

  <ImageView
    android:id="@+id/iv_coupon"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_margin="8dp"
    android:src="@drawable/image_gift"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/iv_person" />

  <TextView
    android:id="@+id/tv_coupon_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:fontFamily="@font/montserrat_bold"
    android:textColor="@color/charcoal"
    app:layout_constraintBottom_toTopOf="@id/tv_coupon_description"
    app:layout_constraintStart_toEndOf="@id/iv_coupon"
    app:layout_constraintTop_toTopOf="@+id/iv_coupon" />

  <TextView
    android:id="@+id/tv_coupon_description"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:fontFamily="@font/montserrat_regular"
    android:textColor="@color/grey"
    android:textSize="12sp"
    app:layout_constrainedWidth="true"
    app:layout_constraintBottom_toTopOf="@id/tv_coupon_expiration"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@id/iv_coupon"
    app:layout_constraintTop_toBottomOf="@id/tv_coupon_title" />

  <TextView
    android:id="@+id/tv_coupon_expiration"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:fontFamily="@font/montserrat_regular"
    android:textColor="@color/green"
    android:textSize="12sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@id/iv_coupon"
    app:layout_constraintTop_toBottomOf="@id/tv_coupon_description" />

</android.support.constraint.ConstraintLayout>
